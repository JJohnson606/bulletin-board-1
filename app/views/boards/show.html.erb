<div>
  <div>
    <h1>
       <%= @the_board.name %> 
    </h1>

<h2> Add Post <h2>
<div>
<form action="/insert_post" method="post">
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="query_title" required><br>
    
    <label for="body">Body:</label><br>
    <textarea id="body" name="query_body" rows="5" required></textarea><br>
    
    <label for="expires_on">Expiration Date:</label><br>
    <input type="date" id="expires_on" name="query_expires_on" required><br>
    
    <label for="board_id">Board :</label><br>
    <input type="text" id="board_id" name="query_board_id" required><br>
    
    <button type="submit">Add Post</button>
  </form>
   </div>
<div>

<h3> Active Post</h3>
</div>

<% matching_post = Post.where({ board_id: @the_board.id})%>

     <% matching_post.each do |post|%>
    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= post.title %>
      </dd>


      <dt>
        Body
      </dt>
      <dd>
        <%= post.body %> 
      </dd>


      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(post.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(post.updated_at) %> ago
      </dd>
    </dl>
  </div>
  <%end%>
</div>

<h3>Expired Post</h3>

<hr>
